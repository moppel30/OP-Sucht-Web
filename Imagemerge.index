<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bilder-Komposition</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 600px;
            margin: 0 auto;
            background: white;
            border-radius: 20px;
            padding: 25px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        }
        
        h1 {
            color: #333;
            margin-bottom: 10px;
            font-size: 24px;
        }
        
        .subtitle {
            color: #666;
            margin-bottom: 25px;
            font-size: 14px;
        }
        
        .controls {
            margin-bottom: 25px;
        }
        
        .control-group {
            margin-bottom: 20px;
        }
        
        label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 600;
            font-size: 14px;
        }
        
        input[type="file"] {
            display: none;
        }
        
        .file-button {
            display: block;
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s;
        }
        
        .file-button:active {
            transform: scale(0.98);
        }
        
        .grid-size {
            display: flex;
            gap: 10px;
            align-items: center;
        }
        
        input[type="number"] {
            flex: 1;
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 16px;
        }
        
        .grid-container {
            display: grid;
            gap: 2px;
            background: #f0f0f0;
            border-radius: 12px;
            overflow: hidden;
            margin-bottom: 20px;
        }
        
        .grid-cell {
            aspect-ratio: 1;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }
        
        .grid-cell img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .grid-cell.empty::after {
            content: '+';
            font-size: 40px;
            color: #ccc;
        }
        
        .remove-btn {
            position: absolute;
            top: 5px;
            right: 5px;
            background: rgba(255,255,255,0.9);
            border: none;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            font-size: 18px;
            cursor: pointer;
            display: none;
            color: #ff4444;
            font-weight: bold;
        }
        
        .grid-cell:hover .remove-btn {
            display: block;
        }
        
        .download-btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s;
            margin-bottom: 10px;
        }
        
        .download-btn:active {
            transform: scale(0.98);
        }
        
        .download-btn:disabled {
            background: #ccc;
            cursor: not-allowed;
        }
        
        .info {
            text-align: center;
            color: #666;
            font-size: 12px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>üì∏ Bilder-Komposition</h1>
        <p class="subtitle">Setze deine Bilder zu einem gro√üen zusammen</p>
        
        <div class="controls">
            <div class="control-group">
                <label>Bilder hochladen</label>
                <input type="file" id="fileInput" accept="image/*" multiple>
                <button class="file-button" onclick="document.getElementById('fileInput').click()">
                    üìÅ Bilder ausw√§hlen
                </button>
            </div>
            
            <div class="control-group">
                <label>Grid-Gr√∂√üe (Zeilen √ó Spalten)</label>
                <div class="grid-size">
                    <input type="number" id="rows" min="1" max="10" value="2" placeholder="Zeilen">
                    <span>√ó</span>
                    <input type="number" id="cols" min="1" max="10" value="2" placeholder="Spalten">
                </div>
            </div>
        </div>
        
        <div id="gridContainer" class="grid-container"></div>
        
        <button class="download-btn" id="downloadBtn" disabled>‚¨áÔ∏è Komposition herunterladen</button>
        <div class="info">Tipp: Tippe auf eine leere Zelle, um ein Bild zuzuweisen</div>
    </div>

    <script>
        let images = [];
        let gridData = [];
        let rows = 2;
        let cols = 2;
        let selectedCell = null;

        const fileInput = document.getElementById('fileInput');
        const rowsInput = document.getElementById('rows');
        const colsInput = document.getElementById('cols');
        const gridContainer = document.getElementById('gridContainer');
        const downloadBtn = document.getElementById('downloadBtn');

        fileInput.addEventListener('change', handleFileSelect);
        rowsInput.addEventListener('change', updateGrid);
        colsInput.addEventListener('change', updateGrid);
        downloadBtn.addEventListener('click', downloadComposition);

        function handleFileSelect(e) {
            const files = Array.from(e.target.files);
            
            files.forEach(file => {
                const reader = new FileReader();
                reader.onload = (event) => {
                    const img = new Image();
                    img.onload = () => {
                        images.push({ src: event.target.result, img: img });
                        if (selectedCell !== null) {
                            gridData[selectedCell] = images.length - 1;
                            selectedCell = null;
                            renderGrid();
                        }
                    };
                    img.src = event.target.result;
                };
                reader.readAsDataURL(file);
            });
        }

        function updateGrid() {
            rows = parseInt(rowsInput.value) || 2;
            cols = parseInt(colsInput.value) || 2;
            gridData = new Array(rows * cols).fill(null);
            renderGrid();
        }

        function renderGrid() {
            gridContainer.style.gridTemplateColumns = `repeat(${cols}, 1fr)`;
            gridContainer.innerHTML = '';
            
            for (let i = 0; i < rows * cols; i++) {
                const cell = document.createElement('div');
                cell.className = 'grid-cell';
                
                if (gridData[i] !== null && images[gridData[i]]) {
                    const img = document.createElement('img');
                    img.src = images[gridData[i]].src;
                    cell.appendChild(img);
                    
                    const removeBtn = document.createElement('button');
                    removeBtn.className = 'remove-btn';
                    removeBtn.textContent = '√ó';
                    removeBtn.onclick = (e) => {
                        e.stopPropagation();
                        gridData[i] = null;
                        renderGrid();
                    };
                    cell.appendChild(removeBtn);
                } else {
                    cell.classList.add('empty');
                }
                
                cell.onclick = () => {
                    selectedCell = i;
                    fileInput.click();
                };
                
                gridContainer.appendChild(cell);
            }
            
            downloadBtn.disabled = !gridData.some(d => d !== null);
        }

        function downloadComposition() {
            const cellSize = 1000;
            const canvas = document.createElement('canvas');
            canvas.width = cols * cellSize;
            canvas.height = rows * cellSize;
            const ctx = canvas.getContext('2d');
            
            ctx.fillStyle = 'white';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            for (let i = 0; i < gridData.length; i++) {
                if (gridData[i] !== null && images[gridData[i]]) {
                    const row = Math.floor(i / cols);
                    const col = i % cols;
                    const img = images[gridData[i]].img;
                    
                    ctx.drawImage(img, col * cellSize, row * cellSize, cellSize, cellSize);
                }
            }
            
            canvas.toBlob((blob) => {
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `komposition_${rows}x${cols}.png`;
                a.click();
                URL.revokeObjectURL(url);
            });
        }

        updateGrid();
    </script>
</body>
</html>
